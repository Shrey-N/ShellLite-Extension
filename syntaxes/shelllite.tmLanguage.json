{
    "name": "ShellLite",
    "scopeName": "source.shelllite",
    "fileTypes": [
        "shl"
    ],
    "patterns": [
        {
            "comment": "Comments",
            "match": "#.*",
            "name": "comment.line.number-sign.shelllite"
        },
        {
            "comment": "Strings",
            "begin": "\"",
            "end": "\"",
            "name": "string.quoted.double.shelllite",
            "patterns": [
                {
                    "match": "\\\\.",
                    "name": "constant.character.escape.shelllite"
                }
            ]
        },
        {
            "comment": "Numbers",
            "match": "\\b\\d+(\\.\\d+)?\\b",
            "name": "constant.numeric.shelllite"
        },
        {
            "comment": "Language Constants",
            "match": "\\b(true|false|null)\\b",
            "name": "constant.language.shelllite"
        },
        {
            "comment": "User Constants (ALL_CAPS)",
            "match": "\\b[A-Z][A-Z0-9_]+\\b",
            "name": "constant.other.shelllite"
        },
        {
            "comment": "Control Keywords",
            "match": "\\b(if|else|elif|while|for|loop|repeat|until|forever|break|continue|return|try|catch|stop|skip|exit)\\b",
            "name": "keyword.control.shelllite"
        },
        {
            "comment": "Declaration Keywords",
            "match": "\\b(to|structure|make|class|extends|const|var|function)\\b",
            "name": "keyword.declaration.shelllite"
        },
        {
            "comment": "Operator Keywords",
            "match": "\\b(is|and|or|not|in|of|as|from|use|load|save|import)\\b",
            "name": "keyword.operator.word.shelllite"
        },
        {
            "comment": "Action Keywords",
            "match": "\\b(say|print|input|ask|alert|write|append|invoke|execute|spawn|wait|every|listen|serve|download|compress|extract|copy|paste|move|remove|delete|create)\\b",
            "name": "keyword.other.action.shelllite"
        },
        {
            "comment": "Operators",
            "match": "(\\+|\\-|\\*|\\/|%|\\=|\\=\\=|!\\=|\\<|\\>|\\<\\=|\\>\\=|\\.|\\,|\\:|\\(|\\)|\\[|\\]|\\{|\\})",
            "name": "keyword.operator.symbol.shelllite"
        },
        {
            "comment": "Built-in Support",
            "match": "\\b(vscode|fs|path|https|http|net|os|sys|math|json|csv|browser)\\b",
            "name": "support.class.shelllite"
        },
        {
            "comment": "Function Definition",
            "match": "\\bto\\s+([a-zA-Z_]\\w*)",
            "captures": {
                "1": {
                    "name": "entity.name.function.shelllite"
                }
            }
        },
        {
            "comment": "Function Call",
            "match": "\\b([a-zA-Z_]\\w*)\\s*\\(",
            "captures": {
                "1": {
                    "name": "entity.name.function.call.shelllite"
                }
            }
        },
        {
            "comment": "Variables",
            "match": "\\b[a-zA-Z_]\\w*\\b",
            "name": "variable.other.shelllite"
        }
    ]
}